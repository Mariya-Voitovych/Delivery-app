<h3>Update package</h3>
<% form_for @courier, :url => { :action => "update" } do |courier_form| %>
  <% courier_form.fields_for :package do |package_field| %>
    <ul>
      <li>uuid: <%= @package.id%></li>
      <li>estimated delivery date: <%= @package.estimated_delivery_date%></li>
      <li>tracking number: <%= @package.tracking_number%></li>
      <li>delivery status: <%= @package.delivery_status%></li>
    </ul>
    <%= package_field.submit "Confirm edit" %>
  <% end %>
<% end %>
